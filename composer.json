{
    "name": "oderopay/odero-php",
    "description": "Oderopay PHP Sdk",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Çağrı S.",
            "email": "hi@bencagri.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Oderopay\\": "src/"
        },
        "psr-0": {"": "src"}
    },
    "require-dev": {
        "phpspec/phpspec": "^7.2",
        "symfony/var-dumper": "^5.4",
        "phpspec/prophecy": "^1.15"
    },
    "require": {
        "php" : "^7.2||^8.0",
        "ext-json" : "*",
        "ext-curl" : "*",
        "ext-mbstring" : "*",
        "symfony/http-client": "^5.4"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
